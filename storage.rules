rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all read and write access to all files.
    // This is the most secure posture. Your application uses public URLs
    // from Cloudinary and other sources for images, so client-side access
    // to this bucket is not required. Server-side (Admin SDK) access will still work.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
