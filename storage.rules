
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all reads and writes to all files.
    // This is the most secure configuration. If you need to allow
    // users to upload or download files (e.g., profile pictures),
    // you would add specific rules here.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Example of allowing authenticated users to write to a 'user-uploads' folder.
    // match /user-uploads/{userId}/{fileName} {
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
