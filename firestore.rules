
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes to all collections.
    // This is a secure default. Specific rules can be added below
    // to grant access to specific collections or documents as needed.
    match /{document=**} {
      allow read, write: if false;
    }

    // Example of allowing only authenticated users to read from a 'users' collection.
    // match /users/{userId} {
    //   allow read: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
