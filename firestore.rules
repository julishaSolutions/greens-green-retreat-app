
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all read/write access to all collections.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read-only access to published posts.
    // This is secure because we are only allowing reads on a specific query.
    match /posts/{postId} {
      allow read: if resource.data.status == 'published';
    }

    // Allow public read access to cottages and activities.
    match /cottages/{cottageId} {
      allow read: if true;
    }

    match /activities/{activityId} {
      allow read: if true;
    }

    // Allow creating new bookings, but not reading or updating them from the client.
    // This is secure because users can only create new data, not see others' data.
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to read the system settings and AI agent configurations.
    match /system_settings/{docId} {
      allow read: if true;
    }
    match /ai_agents/{agentId} {
        allow read: if true;
    }
  }
}
